CREATE TABLE IF NOT EXISTS words (
    id INTEGER NOT NULL PRIMARY KEY,
    word TEXT NOT NULL,
    definition TEXT NOT NULL
);

CREATE TABLE IF NOT EXISTS histories (
    id INTEGER NOT NULL PRIMARY KEY,
    word_id INTEGER NOT NULL UNIQUE,
    word TEXT NOT NULL
);

CREATE TABLE IF NOT EXISTS bookmarks (
    id INTEGER NOT NULL PRIMARY KEY,
    word_id INTEGER NOT NULL UNIQUE,
    word TEXT NOT NULL
);